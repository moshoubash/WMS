@{
    ViewData["Title"] = "Create new delivery";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    @*Order Information*@
    
    <div class="form-group">
        <label class="form-label">
            Date
            <input type="date" name="Date" class="form-control" />
        </label>
    </div>

    <div class="form-group">
        <label class="form-label">
            Status
            <select name="Status" class="form-control">
                <option value="Scheduled">Scheduled</option>
                <option value="In Transit">In Transit</option>
                <option value="Out for Delivery">Out for Delivery</option>
                <option value="Delivered">Delivered</option>
                <option value="Failed Delivery">Failed Delivery</option>
            </select>
        </label>
    </div>

    <div class="form-group">
        <label class="form-label">
            Delivery Person
            <input type="text" name="DeliveryPerson" class="form-control" />
        </label>
    </div>

    @*Order information*@
    <div class="form-group">
        <label class="form-label">
            Order
            <select name="OrderID" class="form-control">
                @{
                    foreach (var o in ViewBag.Orders)
                    {
                        <option value="@o.Value">@o.Text</option>
                    }
                }
            </select>
        </label>
    </div>

    @*Shipment Information*@
    <div class="form-group">
        <label class="form-label">
            Shipment
            <select name="ShipmentID" class="form-control">
                @{
                    foreach (var sh in ViewBag.Shipments)
                    {
                        <option value="@sh.Value">@sh.Text</option>
                    }
                }
            </select>
        </label>
    </div>
   
    <div class="form-group">
        <button class="btn btn-primary">Create</button>
    </div>
</form>