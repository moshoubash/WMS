@model WMS.Core.Supplier
@{
    ViewData["Title"] = $"Edit supplier {Model.ID}";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" name="ContactInfoId" value="@Model.ContactInfoId" />
    <div class="form-group">
        <label class="form-label">
            Name
            <input type="text" name="Name" class="form-control" value="@Model.Name"/>
        </label>
    </div>

    @*Contact Information*@

    <div class="form-group">
        <label class="form-label">
            Email
            <input type="text" name="ContactInfo.Email" class="form-control" value="@ViewBag.Contact.Email"/>
        </label>
    </div>

    <div class="form-group">
        <label class="form-label">
            Phone Number
            <input type="text" name="ContactInfo.PhoneNumber" class="form-control" value="@ViewBag.Contact.PhoneNumber" />
        </label>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Edit</button>
        <a href="/Supplier/AllSuppliers" class="btn btn-secondary">Back to list</a>
    </div>
</form>