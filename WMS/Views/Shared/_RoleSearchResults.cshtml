@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles in the system";
}

<h1>Searched Roles</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered" id="baseContent">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a href="/role/delete/@role.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            <a href="/role/edit/@role.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p>No results found</p>
}
