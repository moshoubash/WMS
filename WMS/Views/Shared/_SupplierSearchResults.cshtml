@model IEnumerable<WMS.Core.Supplier>

<h1>Searched Suppliers</h1>

@if (Model != null && Model.Any())
{
    <table id="baseContent" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Contact Info Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.ID</td>
                        <td>@supplier.Name</td>
                        <td>@supplier.ContactInfoId</td>
                        <td>
                            <a href="/supplier/delete/@supplier.ID" class="btn btn-danger">Delete</a>
                            <a href="/supplier/edit/@supplier.ID" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p>No results found</p>
}
