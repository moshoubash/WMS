@model WMS.Core.ApplicationUser
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditUser</h1>

<form method="post">
    @*First Name*@
    <div class="form-group">
        <label class="form-label">
            First Name
            <input class="form-control" type="text" name="FirstName" value="@Model.FirstName"/>
        </label>
    </div>

    @*Last Name*@
    <div class="form-group">
        <label class="form-label">
            Last Name
            <input class="form-control" type="text" name="LastName" value="@Model.LastName" />
        </label>
    </div>

    @*Email*@
    <div class="form-group">
        <label class="form-label">
            Email
            <input class="form-control" type="email" name="Email" value="@Model.Email" required />
        </label>
    </div>

    @*Phone Number*@
    <div class="form-group">
        <label class="form-label">
            Phone Number
            <input class="form-control" type="text" name="PhoneNumber" value="@Model.PhoneNumber" required />
        </label>
    </div>

    <div class="form-group">
        <label class="form-label">
            <button class="btn btn-primary">Edit</button>
        </label>
    </div>
</form>