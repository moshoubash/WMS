@model WMS.Core.UserRolesViewModel;
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>My Profile</h1>

<dl class="row mb-0">
    <dt class="col-sm-4">Profile Picture</dt>
    <dd class="col-sm-8">
        <img alt="@Model.User.Email photo" src="/img/admin-icon.png" title="Profile picture" width="100px"/>
    </dd>
    
    <hr />
    
    <dt class="col-sm-4">Id</dt>
    <dd class="col-sm-8">@Model.User.Id</dd>
    
    <hr />
    
    <dt class="col-sm-4">Name</dt>
    <dd class="col-sm-8">@Model.User.FirstName @Model.User.LastName</dd>
    
    <hr />
    
    <dt class="col-sm-4">Email</dt>
    <dd class="col-sm-8">@Model.User.Email</dd>
    
    <hr />
    
    <dt class="col-sm-4">Phone Number</dt>
    <dd class="col-sm-8">@Model.User.PhoneNumber</dd>
    
    <hr />
    
    <dt class="col-sm-4">Roles</dt>
    <dd class="col-sm-8">
        @{
            foreach (var role in Model.Roles)
            {
                <p>@role</p>    
            }
        }
    </dd>
    
    <hr />

    <dt class="col-sm-4">Email Verification</dt>
    <dd class="col-sm-8">
        @{
            if (Model.User.EmailConfirmed)
            {
                <i class="text-success fa-solid fa-circle-check"></i>
            }
            else
            {
                <i class="text-danger h4 fa-solid fa-circle-xmark"></i>
            }
        }
    </dd>
</dl>